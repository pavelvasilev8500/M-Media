@model GameModel

<h5 class="my-5 text-warning">
    @Model.Name
</h5>

<div class="row gx-5">
    <div class="img-fluid col-5">
        <div id="carouselImage" class="carousel slide" data-bs-ride="true">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselImage" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"/>
                <button type="button" data-bs-target="#carouselImage" data-bs-slide-to="1" aria-label="Slide 1"/>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img alt="@Model.Name" src="@Model.ImageUrl" class="d-block w-100" />
                </div>
                <div class="carousel-item">
                    <img alt="@Model.Name" src="@Model.ImageUrl" class="d-block w-100" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-7">
        <h4 class="text-warning">@Model.ShortDescription</h4>
        <p class="text-info">@Model.FullDescription</p>
        <h3 class="pull-right text-warning">@Model.StorePrise.ToString("c")</h3>
        <div class="addToCard">
            <p class="button">

            </p>
        </div>
    </div>
</div>