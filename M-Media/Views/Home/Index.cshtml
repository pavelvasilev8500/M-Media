@model HomeViewModel

<div id="carouselImages" class="carousel slide" data-bs-ride="true">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"/>
        <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="1" aria-label="Slide 2"/>
        <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="2" aria-label="Slide 3"/>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://www.digiseller.ru/preview/1030170/p1_3576826_7d301127.png" class="d-block w-100" alt="Carousel image 1">
        </div>
        <div class="carousel-item">
            <img src="https://www.digiseller.ru/preview/935293/p1_2983319_496e97c2.jpg" class="d-block w-100" alt="Carousel image 2">
        </div>
        <div class="carousel-item">
            <img src="https://get.wallhere.com/photo/Halo-suits-Master-Chief-space-suit-mythology-Halo-Master-Chief-Collection-Halo-4-screenshot-computer-wallpaper-pc-game-168133.jpg" class="d-block w-100" alt="Carousel image 3">
        </div>
    </div>
</div>
<div class="text-center">
    <div class="pies-of-the-week">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach(var o in Model.GameOfYear)
            {
                <div class="col">
                    <div class="card pie-card">
                        <img src="@o.ImageThunbnailUrl" class="card-img-top" alt="@o.Name" />
                        <div class="caed-body pie-button">
                            <h4 class="g-grid"/>
                            <div class="d-flex justify-content-between mt-2">
                                <h2 class="text-start">
                                    <a asp-controller="Game"
                                        asp-action="GameDetails"
                                        asp-route-id="@o.Id"
                                        class="pie-link">
                                        @o.Name
                                    </a>
                                </h2>
                                <h5 class="text-nowrap">
                                    @o.StorePrise.ToString("c")
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>